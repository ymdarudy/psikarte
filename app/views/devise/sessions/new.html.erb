<h2 class="fw-bold"><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
    class: "form-control", id: "floatingEmail", placeholder: "Eメール" %>
    <label for="floatingEmail">Eメール</label>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password, autocomplete: "current-password",
    class: "form-control", id: "floatingCurrentPassword", placeholder: "パスワード" %>
    <label for="floatingCurrentPassword">パスワード</label>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('.sign_in'), class: "btn btn-outline-primary px-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
